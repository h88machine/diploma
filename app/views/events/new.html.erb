<div class="row">
	<div class="span5">
		<%= form_for(@event) do |f| %>
		
		<%= render 'shared/error_messages', object: f.object %>
		
		<%= f.label "name" %>
		<%= f.text_field :name %>
		
		<%= f.label "date" %>
		<%= f.date_select :start_time %>

		
		<%= f.submit "Create Event", class: "btn btn-large btn-primary" %>
		
		<% end %>
	</div>
</div>
