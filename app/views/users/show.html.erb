<% provide(:title, @user.name) %>

	
<p class="text-left"><%= @user.name %></p>
<p class="text-left"><%= @user.email %></p><i class="icon-envelope"></i>
<p class="text-left"><%= @date %></p>
<p class="text-left">Last time profile was updated at &nbsp<%= @user.updated_at %></p>
	<div class="span8">
		<% if @user.microposts.any?%>
		<h3>User have (<%= @user.microposts.count%>)
			<% if (@user.microposts.count <= 1 )%>
				Post
			<%else%>
				<%="Post".pluralize %>
			<%end%>
			
			<%=%></h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
		<%end%>
		<p class="text-left"><%= @orders %></p>
	</div>
